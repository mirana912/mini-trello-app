{
  "name": "mini-trello-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "deploy": "npm run build && npm run export && firebase deploy",
    "start": "next start",
    "lint": "next lint",
    "server": "ts-node-dev --respawn --transpile-only server/src/server.ts",
    "server:build": "tsc -p server/tsconfig.json",
    "server:start": "node server/dist/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\""
  },
  "dependencies": {
    "next": "^16.1.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "bootstrap": "^5.3.0",
    "react-bootstrap": "^2.10.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "firebase": "^10.12.0",
    "firebase-admin": "^12.0.0",
    "react-icons": "^5.5.0",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.6.7",
    "nodemailer": "^6.9.13",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.14",
    "@types/bcryptjs": "^2.4.6",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^8.2.2"
  }
}
